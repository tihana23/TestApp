@model TestApp.Models.StavkaRacuna

@{
    ViewData["Title"] = "NoveStavkeRacuna";
}

<h1>NoveStavkeRacuna</h1>
<div>
    <h6>Naziv Dućana: @ViewBag.NazivDucana</h6>
    <h6>Adresa Dućana: @ViewBag.AdresaDucana</h6>
</div>
<h4>StavkaRacuna</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DodajNovuStavkuRacuna" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="IdRacun" readonly />
            </div>
            
            
            
           
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kolicina" class="control-label"></label>
                <input asp-for="Kolicina" class="form-control" />
                <span asp-validation-for="Kolicina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JedinicnaCijena" class="control-label"></label>
                <input asp-for="JedinicnaCijena" class="form-control" />
                <span asp-validation-for="JedinicnaCijena" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Dodaj novu stavku" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
