@model TestApp.Models.NovaStavka

<h2>Dodaj Novu Stavku</h2>

<form asp-action="AddNovaStavka" method="post">
    <div class="form-group">
        <label asp-for="Naziv">Naziv</label>
        <input asp-for="Naziv" class="form-control" />
        <span asp-validation-for="Naziv" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="JedinicnaCijena">Jedinicna Cijena</label>
        <input asp-for="JedinicnaCijena" class="form-control" />
        <span asp-validation-for="JedinicnaCijena" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Spremi Promjene</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}